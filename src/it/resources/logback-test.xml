<configuration>

    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <!-- encoders are assigned the type
             ch.qos.logback.classic.encoder.PatternLayoutEncoder by default -->
        <encoder>
            <pattern>%d{HH:mm:ss.SSS} [%thread] %highlight(%-5level) %logger{36} - %msg%n%ex</pattern>
        </encoder>
    </appender>

    <!--<root level="WARN">-->
        <!--<appender-ref ref="STDOUT" />-->
    <!--</root>-->

    <root level="INFO">
        <appender-ref ref="STDOUT"/>
    </root>
    <!--<logger name="io.waylay" level="DEBUG" />-->
</configuration>
